<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite" parallel="false">
    <test name="Smoke Tests">
        <packages>
            <package name="com.example.tests">
                <classes>
                    <class name="com.example.tests.SmokeTests"/>
                    <class name="com.example.tests.CommonTests"/>
                </classes>
            </package>
        </packages>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
    </test>
</suite>
